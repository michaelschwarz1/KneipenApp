<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/txtKneipeSuchen"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:ems="10" >

            <requestFocus />
        </EditText>

        
        <ImageButton
        	android:id="@+id/btnKneipeSuchen"
   		    android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:src="@drawable/lupe_suchen"
    		style="?android:attr/borderlessButtonStyle" 
   />
    </LinearLayout>

    <TextView
        android:id="@+id/labelKategorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:text="Kategorie"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btn_Navigieren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Alle anzeigen" />

    <Button
        android:id="@+id/btn_KategorieKneipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Kneipe" />

    <Button
        android:id="@+id/btn_KategorieBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Bar" />

    <Button
        android:id="@+id/btn_KategorieClub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Club" />

    <Button
        android:id="@+id/btn_KategorieRestaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Restaurant" />

    <Button
        android:id="@+id/btn_KategorieCafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Cafe" />

</LinearLayout>
