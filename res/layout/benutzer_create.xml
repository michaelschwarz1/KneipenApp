<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/benutzer_create"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.benutzer.BenutzerCreate" >
	
	
	<TableRow>
	
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/b_login" />
			
			<EditText
			    android:id="@+id/login_create"
			    style="@style/RechteSpalteText"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:inputType="text"
			    android:paddingLeft="5dp"
			    tools:ignore="LabelFor" />
	
		</TableRow>
		
		<TableRow>
	
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/b_passwort" />
			
			<EditText
			    android:id="@+id/passwort_create"
			    style="@style/RechteSpalteText"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:inputType="text"
			    android:paddingLeft="5dp"
			    tools:ignore="LabelFor" />
	
		</TableRow>
	
		<TableRow>
	
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/b_nachname" />
			
			<EditText
			    android:id="@+id/nachname_create"
			    style="@style/RechteSpalteText"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:inputType="text"
			    android:paddingLeft="5dp"
			    tools:ignore="LabelFor" />
	
		</TableRow>
		
		<TableRow>
		
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/b_vorname" />
	        
	        <EditText
	            android:id="@+id/vorname_create"
	            style="@style/RechteSpalteText"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:inputType="text"
	            tools:ignore="LabelFor" />
	
	    </TableRow>
	    
	    <TableRow>
	
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/b_email" />
	        
	        <EditText
	            android:id="@+id/email_create"
	            style="@style/RechteSpalteText"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:inputType="textEmailAddress"
	            tools:ignore="LabelFor" />
	
	    </TableRow>
	    
    <TableRow>
	
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/b_geschlecht" />
	        
	        <EditText
	            android:id="@+id/geschlecht_create"
	            style="@style/RechteSpalteText"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:inputType="text"
	            tools:ignore="LabelFor" />
	
	    </TableRow>

	    
	    <TableRow>
	    	<TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/b_agbs" />
	    		    	
	    	<ToggleButton
			    android:id="@+id/agb_tgl"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textOn="@string/s_akzeptiert"
			    android:textOff="@string/s_nicht_akzeptiert" />
	    	
	    	
	    </TableRow>

	    <Button
	    	android:id="@+id/btn_reg"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="50dp"
	    	android:text="@string/registrieren" />

</TableLayout>