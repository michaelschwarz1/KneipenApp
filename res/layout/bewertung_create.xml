  <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	android:layout_width="match_parent"
 	android:layout_height="match_parent" 
 	android:stretchColumns="1,2">

      <TextView
      	android:id="@+id/textView7"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:text="Bewertung erstellen \n"
      	android:textSize="20sp" />

    	<TableRow
    		android:id="@+id/tableRow1"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textSize="16sp" >

    		<TextView
    			android:id="@+id/txt_bewertung_freundlichkeit"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			
    			android:text="Freundlichkeit" />

    		<RatingBar
    			android:id="@+id/rtb_bewertung_freundlichkeit"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" />

    	</TableRow>

    	<TableRow
    		android:id="@+id/tableRow2"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textSize="16sp" >

    		<TextView
    			android:id="@+id/txt_bewertung_sauberkeit"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="Sauberkeit" />

    		<RatingBar
    			android:id="@+id/rtb_bewertung_sauberkeit"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" />

    	</TableRow>

    	<TableRow
    		android:id="@+id/tableRow3"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textSize="16sp" >

    		<TextView
    			android:id="@+id/txt_bewertung_preisleistung"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="Preis-Leistung" />

    		<RatingBar
    			android:id="@+id/rtb_bewertung_preisleistung"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" />

    	</TableRow>

    	<TableRow
    		android:id="@+id/tableRow4"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textSize="16sp" >

    		<TextView
    			android:id="@+id/txt_bewertung_kommentar"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:textSize="16sp"
    			android:text="Kommentar eingeben:" />

    	</TableRow>

    	<EditText
    		android:id="@+id/edt_bewertung_kommentar"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:ems="10"
    		android:inputType="textMultiLine" >

    		<requestFocus />
    	</EditText>

    	<Button
    		android:id="@+id/btn_bewertung_bewertungaschicken"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="Bewertung abschicken" />

    </TableLayout>