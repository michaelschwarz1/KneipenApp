<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/benutzer_details"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bier"
	tools:context=".ui.Benutzer.BenutzerDetails" >

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:paddingLeft="5dp"
		android:text="@string/g_beschreibung"
		android:textSize="25sp"
			android:paddingTop="10dp" 
    		android:textStyle="bold"
    		android:textColor="#B22222" />

	<TableRow
		android:layout_height="200dp"
		android:layout_marginBottom="25dp"
		android:layout_marginTop="25dp"
		android:gravity="center_horizontal"
		android:paddingTop="10dp" >
 
		<TextView
			android:id="@+id/g_gutscheinAnzeigen_beschreibung"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:text="Large Text"
			android:background="@drawable/back"
			android:textAppearance="?android:attr/textAppearanceLarge" />
	</TableRow>

	<Button
		android:id="@+id/btn_einloesen"
		style="@style/button_text"
		android:layout_height="wrap_content"
		android:background="@drawable/button_style"
		android:text="@string/einloesen" />

	<TextView
		android:id="@+id/g_gutscheinAnzeigen_verbraucht"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:textAppearance="?android:attr/textAppearanceMedium" />

</TableLayout>